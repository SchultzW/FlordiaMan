@model Reply
@{
    ViewData["Title"] = "AddReply";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h1>AddReply</h1>

<div>
    <form method="post">
        <div asp-validation-summary="All">
            <div class=" form-group">
                <label for="Name">Name</label>
                <input class="form-control" name="Name" />
            </div>
            <div class="form-group">
                <label for="Text">Reply Text:</label>
                <textarea class="form-control col-6" name="Text"></textarea><br />
            </div>
            <input type="hidden" value="@ViewBag.id" />
            <div class="form-group">
                <button class="btn btn-default" type="submit">Add Reply</button>
            </div>
        </div>
        


    </form>
   



</div>