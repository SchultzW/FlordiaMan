@model Post
@{
    ViewData["Title"] = "AddPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddPost</h1>

<form asp-action="AddPost" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="PostTopic">Title:</label>
        <div><span asp-validation-for="PostTopic"></span></div>
        <input class="form-control" asp-for="PostTopic" />
        
    </div>  <div class="form-group">
        <label asp-for="PostText">Text</label>
        <div><span asp-validation-for="PostText"></span></div>        
        <textarea class="form-control col-6" asp-for="PostText"></textarea><br />
    </div>
    <div class="form-group">
        <button class="btn btn-default" type="submit">Submit</button>
    </div>
</form>