
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="grid">
    <article class="card product-item">
        <a asp-controller="Event" asp-action="ListEvent">
            <header class="card__header brown">
                <h1 class="product__title center freakshowText">
                    Events
                </h1>
            </header>
